index

<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <title>Employee Management</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h2>Employee Management</h2>
    
    <a href="logout">Logout</a>
    <br><br>
    
    <table border="1">
        <tr>
            <th>EMP ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Salary</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        
        <c:forEach var="emp" items="${employees}">
            <tr>
                <td>${emp.empId}</td>
                <td>${emp.name}</td>
                <td>${emp.email}</td>
                <td>${emp.designation}</td>
                <td>${emp.salary}</td>
                <td>${emp.status}</td>
                <td>
                    <a href="edit/${emp.empId}">Edit</a> |
                    <a href="delete/${emp.empId}" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        </c:forEach>
    </table>

    <br>
    <a href="add">Add New Employee</a>
</body>
</html>



